# Podspec Sources
source 'https://github.com/CocoaPods/Specs.git'

# Configuration
inhibit_all_warnings!
use_frameworks!
platform :ios, '10.0'

# Plugins
plugin 'cocoapods-wholemodule'

# Example App Target
target 'Example' do
    pod 'Pocket', :path => '..'
    pod 'web3swift', :git => 'https://github.com/MercuryProtocol/web3.swift.git', :branch => 'master'
    pod 'CryptoSwift', :git => "https://github.com/krzyzanowskim/CryptoSwift", :branch => "develop"
    pod 'SwiftyJSON'

    # Test Target
    target 'ExampleTests' do
        inherit! :search_paths
    end
end
